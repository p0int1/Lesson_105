<Window x:Class="Task_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_5"
        mc:Ignorable="d"
        Title="Cохранение настроек в реестре Windows" Height="450" Width="800">
    <Grid Margin="5">
        <Label Name="lblOut" Content="" Margin="10,10,10,0" VerticalAlignment="Top" Height="100" Background="#FFEAE0E0" MouseDoubleClick="lblOut_MouseDoubleClick"/>
        <TextBox Name="txtIn" Margin="10,115,10,0" TextWrapping="Wrap" TextChanged="changeText" Text="" Height="100" VerticalAlignment="Top"/>
        <Button Name="setColor" Content="set color" HorizontalAlignment="Left" Margin="10,0,0,20" VerticalAlignment="Bottom" Width="75" Click="setColor_Click"/>
        <Button Name="setFont" Content="set font" HorizontalAlignment="Left" Margin="100,0,0,20" VerticalAlignment="Bottom" Width="75" Click="setFont_Click"/>
        <Button Name="saveUI" Content="save" Margin="0,0,10,20" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="saveUI_Click"/>
        <ListBox Name="info" Height="130" Margin="10,220,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
